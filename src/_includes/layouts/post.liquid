---
layout: layouts/default.liquid
---

<header class="post-header">
  <h1 class="post-title">{{ title }}</h1>
  <div class="post-time">
    <time datetime="{{ post.date }}">
      {{ page.date | date : "%a, %b %d, %Y" }}
    </time>
  </div>
</header>

<section class="post-container">
  {{ content }}
</section>

{% assign similar = collections.posts | similarPosts: page.inputPath, tags %} {%
if similar.length > 0 %}
<section class="related">
  <h2 class="related-title">You might also enjoy</h2>
  <ul class="related-posts">
    {% for post in similar limit: 3 %}
    <li class="related-list-item">
      <a class="related-article-title" href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endif %} {% include "css/prism.liquid" %}

<style>
  .post-header {
    margin-bottom: var(--space-5);
  }
  .post-title {
    font-weight: normal;
  }
  .post-time {
    color: var(--color-text-shade);
    font-size: var(--font-size-xs);
  }
  .post-container {
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-text-shade);
  }
  .post-container h2 {
    margin-top: var(--space-7);
  }
  .post-container h3 {
    margin-top: var(--space-6);
  }
  .post-container blockquote {
    margin: var(--space-5) 0;
  }
  .post-container > * + * {
    margin-top: var(--space-3);
  }
  .post-container > *:first-child {
    margin-top: 0;
  }
  .post-container blockquote > * + * {
    margin-top: var(--space-3);
  }
  .post-container ul,
  .post-container ol {
    padding-left: var(--space-6);
  }
  .post-container h2 + *,
  .post-container h3 + *,
  .post-container h4 + *,
  .post-container h5 + * {
    margin-top: var(--space-2);
  }
  .related {
    margin-top: var(--space-8);
  }
  .related-title {
    margin-bottom: var(--space-3);
  }
  .related-posts {
    list-style: none;
    padding-left: 0;
  }
  .related-list-item {
    margin-bottom: var(--space-2);
  }
  .related-article-title {
    color: var(--color-primary);
    text-decoration: none;
    font-size: var(--font-size-base);
    transition: color 0.2s ease-in-out;
  }
  .related-article-title:hover {
    text-decoration: underline;
  }
  :root {
    --prism-foreground: #301e1a;
    --prism-background: transparent;

    --prism-comment: #8a7a6c;
    --prism-namespace: #614942;
    --prism-string: #c25f26;
    --prism-punctuation: #7d6b62;
    --prism-literal: #da6c20;
    --prism-keyword: #96481d;
    --prism-function: #bd5a22;
    --prism-deleted: #a73200;
    --prism-class: #e07438;
    --prism-builtin: #964219;
    --prism-property: #cc5e1b;
    --prism-regex: #ad502b;
  }

  [data-theme="dark"] {
    --prism-foreground: #f8f5e9;

    --prism-namespace: #d6c8a6;
    --prism-comment: #96866c;
    --prism-string: #ff5500;
    --prism-punctuation: #c9bea0;
    --prism-literal: #ff7e33;
    --prism-keyword: #ff6c1f;
    --prism-function: #ff914d;
    --prism-deleted: #ff3c00;
    --prism-class: #ff8428;
    --prism-builtin: #e84d00;
    --prism-property: #ff5500;
    --prism-regex: #ff7a29;
  }
</style>
